{
    "name": "Shell Bash",
    "description": "You can launch yourself, using your shell to bash through enemies.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/mob_effect/resistance.png",
            "text": "Sneak to charge, launch with with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Your shell must be at least halfway repaired in order to deal bash damage."
        }
    ],
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 20,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 7,
            "condition": {
                "type": "origins:resource",
                "resource": "bettershulk:shellbash_resource",
                "comparison": ">",
                "compare_to": 0
            }
        },
        "max_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.shulker.open",
            "pitch": 0.75
        }
    },
    "charge": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sneaking"
                },
                {
                    "type": "origins:on_block"
                },
                {
                    "type": "origins:resource",
                    "resource": "bettershulk:shellbash_launch",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "bettershulk:shellbash_resource",
            "change": 1
        }
    },
    "reset": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:sneaking"
                },
                {
                    "type": "origins:resource",
                    "resource": "bettershulk:shellbash_resource",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "bettershulk:shellbash_resource",
            "change": 0,
            "operation": "set"
        }
    },
    "launch": {
        "type": "origins:active_self",
        "condition": {
            "type": "origins:resource",
            "resource": "bettershulk:shellbash_resource",
            "comparison": "==",
            "compare_to": 20
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tag @s add bash"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "bettershulk:shellbash_resource",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:add_velocity",
                    "z": 5,
                    "space": "local"
                },
                {
                    "type": "origins:delay",
                    "ticks": 40,
                    "action": {
                        "type": "origins:execute_command",
                        "command": "tag @s remove bash"
                    }
                }
            ]
        },
        "cooldown": 150,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 20
        },
        "key": {
            "key": "key.loadToolbarActivator"
        }
    },
    "slide": {
        "type": "origins:modify_slipperiness",
        "condition": {
            "type": "origins:nbt",
            "nbt": "{Tags: ['bash']}"
        },
        "modifier": {
            "operation": "multiply_total_multiplicative",
            "value": 3
        }
    },
    "bash": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:nbt",
                    "nbt": "{Tags: ['bash']}"
                },
                {
                    "type": "origins:resource",
                    "resource": "bettershulk:shell_resource",
                    "comparison": ">=",
                    "compare_to": 7
                }
            ]
        },
        "entity_action": {
            "type": "origins:area_of_effect",
            "radius": 2,
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:living"
                }
            },
            "bientity_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:damage",
                        "amount": 8,
                        "damage_type": "cramming"
                    },
                    {
                        "type": "origins:add_velocity",
                        "y": 1,
                        "z": 4
                    },
                    {
                        "type": "origins:actor_action",
                        "action": {
                            "type": "origins:play_sound",
                            "sound": "minecraft:block.anvil.land"
                        }
                    }
                ]
            }
        }
    }
}
{
    "name": "Hardened Shell",
    "description": "You can close your shell, gaining heavy resistance to physical damage, immunity to arrows, and grounding yourself (take no knockback).",
    "type": "origins:multiple",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "minecraft:textures/item/shulker_shell.png",
            "text": "Toggle with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "In this state you cannot move, are blinded, cannot attack, and cannot interact with blocks. Your shell can tank 14 hits. You can, however, teleport and use items. Your shell repairs/reforms slowly while you sneak and stop moving."
        }
    ],
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "retain_state": false,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "bettershulk:shell_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "inverted": true,
                    "type": "origins:nbt",
                    "nbt": "{Tags: ['bash']}"
                }
            ]
        },
        "key": {
            "key": "key.saveToolbarActivator"
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 14,
        "start_value": 14,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png"
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.shulker.hurt"
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.item.break"
                }
            ]
        }
    },
    "repair": {
        "type": "origins:action_over_time",
        "interval": 40,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:power_active",
                    "power": "bettershulk:shell_toggle"
                },
                {
                    "type": "origins:sneaking"
                },
                {
                    "inverted": true,
                    "type": "origins:moving"
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "bettershulk:shell_resource",
            "change": 1,
            "operation": "add"
        }
    },
    "toggle_sound": {
        "type": "origins:active_self",
        "condition": {
            "type": "origins:resource",
            "resource": "bettershulk:shell_resource",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:power_active",
                "power": "bettershulk:shell_toggle"
            },
            "if_action": {
                "type": "origins:play_sound",
                "sound": "minecraft:entity.shulker.close"
            },
            "else_action": {
                "type": "origins:play_sound",
                "sound": "minecraft:entity.shulker.open"
            }
        },
        "key": {
            "key": "key.saveToolbarActivator"
        }
    },
    "blinded": {
        "type": "origins:stacking_status_effect",
        "min_stacks": 0,
        "max_stacks": 2,
        "duration_per_stack": 20,
        "tick_rate": 10,
        "effect": {
            "effect": "minecraft:blindness",
            "is_ambient": false,
            "show_particles": false,
            "show_icon": false
        },
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        }
    },
    "broken": {
        "type": "origins:action_when_damage_taken",
        "cooldown": 1,
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "bettershulk:shell_resource",
            "change": -1,
            "operation": "add"
        },
        "damage_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "minecraft:bypasses_armor"
        }
    },
    "deflect": {
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:projectile",
            "projectile_condition": {
                "type": "origins:entity_type",
                "entity_type": "minecraft:arrow"
            }
        },
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        }
    },
    "deflect_sound": {
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:area_of_effect",
            "radius": 3,
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "inverted": true,
                            "type": "origins:nbt",
                            "nbt": "{inGround:1b}"
                        },
                        {
                            "type": "origins:entity_type",
                            "entity_type": "minecraft:arrow"
                        },
                        {
                            "inverted": true,
                            "type": "origins:nbt",
                            "nbt": "{Tags: ['sound_generated']}"
                        }
                    ]
                }
            },
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:play_sound",
                            "sound": "minecraft:item.shield.block"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "tag @s add sound_generated"
                        }

                    ]
                }
            }
        }
    },
    "no_attacking": {
        "type": "origins:modify_damage_dealt",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "modifier": {
            "name": "No attacking while in shell",
            "operation": "multiply_total",
            "value": -1
        }
    },
    "no_block_interaction": {
        "type": "origins:prevent_block_selection",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        }
    },
    "no_entity_interaction": {
        "type": "origins:prevent_entity_use",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        }
    },
    "no_flying": {
        "type": "origins:prevent_elytra_flight",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        }
    },
    "no_jumping": {
        "type": "origins:modify_jump",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "modifier": {
            "name": "Cannot jump while in shell",
            "operation": "set_total",
            "value": -1
        }
    },
    "no_moving": {
        "type": "origins:modify_attribute",
        "attribute": "minecraft:generic.movement_speed",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "modifier": {
            "name": "Cannot move while in shell",
            "operation": "set_total",
            "value": 0
        }
    },
    "resist": {
        "type": "origins:modify_damage_taken",
        "condition": {
            "type": "origins:power_active",
            "power": "bettershulk:shell_toggle"
        },
        "modifier": {
            "operation": "multiply_total_multiplicative",
            "value": -0.8
        },
        "damage_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "minecraft:bypasses_armor"
        }
    }
}